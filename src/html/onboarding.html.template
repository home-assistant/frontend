<!DOCTYPE html>
<html>
  <head>
    <title>Home Assistant</title>
    <link rel="preload" href="<%= latestPageJS %>" as="script" crossorigin="use-credentials" />
    <%= renderTemplate('_header') %>
    <style>
      html {
        color: var(--primary-text-color, #212121);
      }
      @media (prefers-color-scheme: dark) {
        html {
          background-color: #111111;
          color: var(--primary-text-color, #e1e1e1);
        }
      }
      .content {
        padding: 20px 16px;
        max-width: 400px;
        margin: 0 auto;
      }

      .header {
        text-align: center;
        font-size: 1.96em;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 300;
      }

      .header img {
        margin-right: 16px;
      }
    </style>
  </head>
  <body>
    <div class="content">
      <div class="header">
        <img src="/static/icons/favicon-192x192.png" height="52" />
        Home Assistant
      </div>

      <ha-onboarding></ha-onboarding>
    </div>

    <%= renderTemplate('_js_base') %>
    <%= renderTemplate('_preload_roboto') %>

    <script type="module" crossorigin="use-credentials">
      import "<%= latestPageJS %>";
      window.stepsPromise = fetch("/api/onboarding", {
        credentials: "same-origin",
      });
    </script>

    <script nomodule>
      (function() {
        // Safari 10.1 supports type=module but ignores nomodule, so we add this check.
        if (!isS101) {
          <% if (useRollup) { %>
            _ls("/static/js/s.min.js").onload = function() {
              System.import("<%= es5PageJS %>");
            }
          <% } else { %>
            _ls("<%= es5PageJS %>");
          <% } %>
        }
      })();
    </script>
  </body>
</html>
