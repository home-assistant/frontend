{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Develop Frontend",
      "type": "gulp",
      "task": "develop-app",
      // Sync changes here to other tasks until issue resolved
      // https://github.com/Microsoft/vscode/issues/61497
      "problemMatcher": {
        "owner": "ha-build",
        "source": "ha-build",
        "fileLocation": "absolute",
        "severity": "error",
        "pattern": [
          {
            "regexp": "(SyntaxError): (.+): (.+) \\((\\d+):(\\d+)\\)",
            "severity": 1,
            "file": 2,
            "message": 3,
            "line": 4,
            "column": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Changes detected. Starting compilation",
          "endsPattern": "Build done @"
        }
      },
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
